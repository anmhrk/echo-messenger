{
  "name": "echo-messenger",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "env": "cd apps/server && mv .env.example .env1 && cd ../web && mv .env.example .env1",
    "format": "prettier --write \"**/*.{js,mjs,cjs,jsx,ts,tsx,json,css,md}\"",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F server db:push",
    "db:studio": "turbo -F server db:studio",
    "db:generate": "turbo -F server db:generate",
    "db:migrate": "turbo -F server db:migrate"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.6"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,tsx,json,css,md}": [
      "bun run format"
    ]
  },
  "packageManager": "bun@1.2.20"
}
